Plugins:     META (0.4), DevFiles (0.4)
PostConfCommand: ocaml postconf.ml

Flag xen
  Description:  Compile for Mirage-xen
  Default:      false

Library "safepass"
  Path:     src
  Modules:  Bcrypt
  CSources: crypt_blowfish.c, crypt_blowfish.h, bcrypt_stub.c
  CCOpt:    -W -Wall -Wbad-function-cast -Wcast-align -Wcast-qual -Wstrict-prototypes -Wshadow -Wundef -Wpointer-arith -O2 -fomit-frame-pointer -funroll-loops $CFLAGS
  if flag(xen)
    CCLib:  $LDFLAGS
  else
    CCLib:  -L/does_not_exist
    (* Can't pass empty CCLib, so just add a flag that will have no effect *)

Document "safepass-api"
  Title:                API reference for safepass
  Type:                 ocamlbuild (0.3)
  Install:              true
  InstallDir:           $htmldir
  BuildTools:           ocamldoc
  XOCamlbuildPath:      src
